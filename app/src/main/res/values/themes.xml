<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodCatalogue" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FoodCatalogue.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FoodCatalogue.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.FoodCatalogue.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--Typographies-->
    <style name="FoodCatalogue.Heading" parent="TextAppearance.AppCompat" />

    <style name="FoodCatalogue.Heading.3">
        <item name="android:textSize">@dimen/_40ssp</item>
        <item name="android:fontFamily">@font/mulish_extrabold</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/_54ssp</item>
    </style>

    <style name="FoodCatalogue.Heading.4">
        <item name="android:textSize">@dimen/_28ssp</item>
        <item name="android:fontFamily">@font/mulish_extrabold</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/_40ssp</item>
    </style>

    <style name="FoodCatalogue.Heading.5">
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/_32ssp</item>
    </style>

    <style name="FoodCatalogue.Heading.6">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/_20ssp</item>
    </style>

    <style name="FoodCatalogue.Heading.7">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/_20ssp</item>
    </style>

    <style name="FoodCatalogue.Subtitle" parent="TextAppearance.AppCompat" />

    <style name="FoodCatalogue.Subtitle.1">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/_28ssp</item>
    </style>

    <style name="FoodCatalogue.Subtitle.2">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="fontFamily">@font/mulish_semibold</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/_28ssp</item>
    </style>

    <style name="FoodCatalogue.Subtitle.3">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/mulish_semibold</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/_20ssp</item>
    </style>

    <style name="FoodCatalogue.Body" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/mulish_regular</item>
    </style>

    <style name="FoodCatalogue.Body.1">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/_26ssp</item>
    </style>

    <style name="FoodCatalogue.Body.2">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/_22ssp</item>
    </style>

    <style name="FoodCatalogue.Body.3">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/_20ssp</item>
    </style>

    <style name="FoodCatalogue.Label" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/mulish_semibold</item>
    </style>

    <style name="FoodCatalogue.Label.Medium">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/_20ssp</item>
    </style>

    <style name="FoodCatalogue.Label.Small">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/_16ssp</item>
    </style>

    <style name="FoodCatalogue.Capitalised" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/mulish_extrabold</item>
        <item name="android:textColor">@color/gray_1</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/_18ssp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FoodCatalogue.Search" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_selector_state</item>
        <item name="drawableStartCompat">@drawable/ic_search</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_13sdp</item>
        <item name="android:paddingTop">@dimen/_11sdp</item>
        <item name="android:paddingBottom">@dimen/_11sdp</item>
        <item name="android:textColorHint">@color/gray_4</item>
        <item name="android:textColor">@color/gray_1</item>
        <item name="fontFamily">@font/mulish_semibold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:hint">Cari disini</item>
    </style>

    <style name="MySpinner.Dark" parent="Base.Widget.AppCompat.Spinner">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

</resources>