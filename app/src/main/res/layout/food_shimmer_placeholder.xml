<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/_16sdp">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray_5"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_image_placeholder"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:layout_marginVertical="@dimen/_16sdp"
        android:background="@drawable/bg_rounded_white"
        android:backgroundTint="@color/gray_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_food_placeholder_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:background="@drawable/bg_rounded_white"
        android:backgroundTint="@color/gray_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_image_placeholder"
        app:layout_constraintTop_toTopOf="@id/view_image_placeholder" />

    <TextView
        android:id="@+id/tv_food_placeholder_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:background="@drawable/bg_rounded_white"
        android:backgroundTint="@color/gray_5"
        app:layout_constraintEnd_toEndOf="@id/tv_food_placeholder_1"
        app:layout_constraintStart_toStartOf="@id/tv_food_placeholder_1"
        app:layout_constraintTop_toBottomOf="@id/tv_food_placeholder_1" />

    <TextView
        android:id="@+id/tv_food_placeholder_3"
        android:layout_width="@dimen/_76sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:background="@drawable/bg_rounded_white"
        android:backgroundTint="@color/gray_5"
        app:layout_constraintStart_toStartOf="@id/tv_food_placeholder_2"
        app:layout_constraintTop_toBottomOf="@id/tv_food_placeholder_2" />

</androidx.constraintlayout.widget.ConstraintLayout>